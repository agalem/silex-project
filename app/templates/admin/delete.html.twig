{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.admin'|trans }}
{% endblock %}

{% block main %}
    {% form_theme form with ['bootstrap_4_horizontal_layout.html.twig', 'form/form_errors.html.twig'] %}

    <h5 class="modal-title text-monospace custom-m-b">{{ 'label.delete_user'|trans }} {{ deletedUser.login }}</h5>
    <div class="form-group">
        {{ form_start(form, { method: 'post', action: url('user_delete', {'id': deletedUser.id}) }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-danger" />
        {{ form_end(form) }}
    </div>

    <br/><br/>

    <a href="{{ url('admin_manager') }}">{{ 'label.return'|trans }}</a>
{% endblock %}