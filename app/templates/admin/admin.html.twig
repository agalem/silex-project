{% extends "base.html.twig" %}


{% block title %}
    Application
{% endblock %}

{% block main %}
    <h4 class="modal-title text-monospace">{{ 'title.manage_users'|trans }}</h4>
    {% if users is defined and users|length %}
        <table class="table table-hover">
            <caption>{{ 'title.manage_users'|trans }}</caption>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row" class="">{{ user.login }}</th>
                    <td class="custom-pos_rel"><a href="{{ url('user_edit', {'id': user.id}) }}" class="btn btn-warning custom-btn_table custom-m-r">{{ 'label.edit'|trans }}</a></td>
                    <td class="custom-pos_rel"><a href="{{ url('user_delete', {'id': user.id}) }}"  class="btn btn-danger text-white custom-btn_table">{{ 'action.delete'|trans }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ 'title.no_users'|trans }}</p>
    {% endif %}
{% endblock %}
