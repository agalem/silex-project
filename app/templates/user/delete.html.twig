{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label.user_account'|trans }}
{% endblock %}

{% block main %}
    <h2 class="h5 modal-title text-monospace custom-m-b">{{ 'label.delete_self'|trans }}</h2>
    <div class="form-group">
        {{ form_start(form, { method: 'post', action: url('user_delete_self') }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-danger" />
        {{ form_end(form) }}
    </div>
{% endblock %}