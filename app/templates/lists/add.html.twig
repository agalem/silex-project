{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .header {
            width: 100%;
            height: 55px;
            background-color: #fff;
            text-align: right;
            line-height: 50px;
            padding-right: 30px;
            color: #fff;
            font-size: 16px;
        }

        .main-content {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: row;
        }

        .aside {
            width: 300px;
            height: 100%;

        }

        .list-margin {
            margin-top: 30px;
        }

        .lists-content {
            height: calc(100% - 100px);
            width: calc(100% - 100px);
            position: relative;
            top: 100px;
            padding: 0 40px;
        }

        .custom-m-b {
            margin-bottom: 10px;
        }

        .custom-m-t {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block title %}
    Application
{% endblock %}

{% block body %}
    <header class="header">
        <button class="btn btn-outline-info my-2 my-sm-0" >Sign Out</button>
    </header>
    <div class="main-content">
        <aside class="aside bg-info">
            <h1 class="card-title text-light m-lg-2">ShopLista</h1>
            {% if lists is defined and lists|length %}
                <ul class="list-group list-margin" >
                    {% for list in lists %}
                        <a href="{{ url('lists_view', {'id': list.id}) }}" title="{{ list.name }}" class="text-light"><li class="list-group-item bg-info">{{ list.name }}</li></a>
                    {% endfor %}
                </ul>
            {% endif %}
            <ul class="list-group list-margin">
                <a href="{{ url('manage_lists') }}" title="{{ 'title.manage_lists'|trans }}" class="text-light"><li class="list-group-item bg-info">{{ 'title.manage_lists'|trans }}</li></a>
            </ul>
        </aside>
        <main class="lists-content">
            <h3 class="modal-title text-monospace custom-m-b">{{ 'label.add_list'|trans }}</h3>
            <div class="form-group">
            {{ form_start(form, { method: 'post', action: url('list_add') }) }}
                <div>
                    {{ form_label(form.name, 'label.name'|trans) }}<br/>
                    <div class="form-input">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <br/>
                <div>
                    {{ form_label(form.maxCost, 'label.max_cost'|trans) }}<br/>
                    <div class="form-input">
                        {{ form_widget(form.maxCost) }}
                        {{ form_errors(form.maxCost) }}
                    </div>
                </div>
                <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success custom-m-t" />
            {{ form_end(form) }}
            </div>
        </main>
    </div>
{% endblock %}
